{
  "name": "ppoi",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered anime profile picture generator",
  "homepage": "https://ppoi.poipoi.click",
  "repository": {
    "type": "git",
    "url": "https://github.com/aboutdevz/ppoi.git"
  },
  "bugs": {
    "url": "https://github.com/aboutdevz/ppoi/issues"
  },
  "keywords": [
    "ai",
    "anime",
    "profile-picture",
    "generator",
    "nextjs",
    "cloudflare"
  ],
  "author": "ppoi team",
  "license": "MIT",
  "engines": {
    "node": ">=18.17.0",
    "bun": ">=1.0.0"
  },
  "scripts": {
    "dev:next": "next dev --turbopack",
    "dev:worker": "wrangler dev",
    "dev": "concurrently \"next dev --turbopack\" \"wrangler dev\"",
    "build": "next build",
    "build:worker": "wrangler deploy --dry-run",
    "build:nextjs": "opennextjs-cloudflare build",
    "start": "next start",
    "preview:nextjs": "opennextjs-cloudflare build && wrangler dev .open-next/worker.js --config wrangler-nextjs.jsonc",
    "deploy:nextjs": "opennextjs-cloudflare build && wrangler deploy .open-next/worker.js --config wrangler-nextjs.jsonc",
    "deploy:nextjs:staging": "opennextjs-cloudflare build && wrangler deploy .open-next/worker.js --config wrangler-nextjs.jsonc --env staging",
    "deploy:nextjs:production": "opennextjs-cloudflare build && wrangler deploy .open-next/worker.js --config wrangler-nextjs.jsonc --env production",
    "deploy": "wrangler deploy --env production",
    "deploy:preview": "wrangler deploy --env preview",
    "deploy:dev": "wrangler deploy",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "migrate": "bunx drizzle-kit generate && bunx wrangler d1 migrations apply ppoi-db --local",
    "migrate:prod": "bunx drizzle-kit generate && bunx wrangler d1 migrations apply ppoi-db --env production",
    "migrate:preview": "bunx drizzle-kit generate && bunx wrangler d1 migrations apply ppoi-db --env preview",
    "db:studio": "bunx drizzle-kit studio",
    "db:seed": "bunx tsx scripts/seed.ts",
    "generate:secret": "node -e \"console.log(require('crypto').randomBytes(32).toString('base64'))\"",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
    "clean": "rm -rf .next && rm -rf dist && rm -rf .open-next",
    "prepare": "husky",
    "setup:prod": "echo 'Run the commands in DEPLOYMENT.md to set up production resources'",
    "verify:deploy": "curl -f https://ppoi-api.poipoi.click/v1/explore || echo 'Deployment verification failed'",
    "logs:prod": "wrangler tail --env production",
    "db:check": "wrangler d1 execute ppoi-db --env production --command 'SELECT COUNT(*) FROM users;'"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.10.0",
    "@hono/zod-validator": "^0.7.3",
    "@opennextjs/cloudflare": "^1.8.5",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "argon2": "^0.44.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "critters": "^0.0.25",
    "drizzle-orm": "^0.44.5",
    "framer-motion": "^12.23.22",
    "hono": "^4.9.8",
    "isomorphic-dompurify": "^2.28.0",
    "lucide-react": "^0.544.0",
    "next": "15.5.4",
    "next-auth": "^4.24.11",
    "next-intl": "^4.3.9",
    "next-themes": "^0.4.6",
    "png-chunk-text": "^1.0.0",
    "png-chunks-encode": "^1.0.0",
    "png-chunks-extract": "^1.0.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.11",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250924.0",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.0",
    "msw": "^2.11.3",
    "nanoid": "^5.0.8",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "tsx": "^4.20.5",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vitest": "^3.2.4",
    "wrangler": "^4.40.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,css,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "**/*.{ts,tsx}": [
      "bash -c 'tsc --noEmit'",
      "vitest related --run"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
